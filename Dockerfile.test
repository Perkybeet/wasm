# Dockerfile.test - WASM Testing Environment
# 
# This Dockerfile creates a complete Ubuntu environment for testing WASM
# with all system dependencies (nginx, apache, certbot, nodejs, etc.)
#
# Build:   docker build -t wasm-test -f Dockerfile.test .
# Run:     docker run -it --rm -v $(pwd):/app --name wasm-dev wasm-test bash

FROM ubuntu:24.04

LABEL maintainer="Yago LÃ³pez Prado <yago.lopez.adeje@gmail.com>"
LABEL description="WASM development and testing environment"

# Avoid interactive prompts during package installation
ENV DEBIAN_FRONTEND=noninteractive
ENV TZ=UTC

# Install system dependencies
RUN apt-get update && apt-get install -y \
    # Python
    python3 \
    python3-pip \
    python3-venv \
    python3-dev \
    # Web servers
    nginx \
    apache2 \
    # SSL
    certbot \
    python3-certbot-nginx \
    python3-certbot-apache \
    # Node.js (via NodeSource)
    curl \
    gnupg \
    # Git and build tools
    git \
    build-essential \
    # System utilities
    sudo \
    systemctl \
    vim \
    nano \
    tree \
    jq \
    tar \
    gzip \
    unzip \
    # For testing
    iproute2 \
    net-tools \
    dnsutils \
    && rm -rf /var/lib/apt/lists/*

# Install Node.js 20.x
RUN curl -fsSL https://deb.nodesource.com/setup_20.x | bash - \
    && apt-get install -y nodejs \
    && rm -rf /var/lib/apt/lists/*

# Install pnpm and bun globally
RUN npm install -g pnpm \
    && curl -fsSL https://bun.sh/install | bash \
    && ln -s /root/.bun/bin/bun /usr/local/bin/bun

# Create test user (www-data already exists for services)
RUN useradd -m -s /bin/bash testuser \
    && echo "testuser ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers

# Create WASM directories
RUN mkdir -p /var/www/apps \
    && mkdir -p /var/backups/wasm \
    && mkdir -p /var/log/wasm \
    && mkdir -p /etc/wasm \
    && chown -R www-data:www-data /var/www/apps \
    && chown -R www-data:www-data /var/backups/wasm \
    && chown -R www-data:www-data /var/log/wasm

# Set up nginx
RUN rm -f /etc/nginx/sites-enabled/default

# Set up apache (disable default site)
RUN a2dissite 000-default 2>/dev/null || true \
    && a2enmod proxy proxy_http headers rewrite ssl

# Working directory
WORKDIR /app

# Copy project files
COPY . /app/

# Install Python dependencies
RUN pip3 install --break-system-packages -e . \
    && pip3 install --break-system-packages pytest pytest-cov

# Create default WASM config
RUN echo "apps_directory: /var/www/apps\n\
webserver: nginx\n\
service_user: www-data\n\
backup:\n\
  directory: /var/backups/wasm\n\
  max_per_app: 10\n\
ssl:\n\
  enabled: true\n\
  provider: certbot\n\
  email: test@example.com" > /etc/wasm/config.yaml

# Expose ports for testing
EXPOSE 80 443 3000

# Default command
CMD ["/bin/bash"]
